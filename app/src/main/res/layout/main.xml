<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/backimage"
    android:textDirection="anyRtl"
    android:id="@+id/linearLayout5"
    >

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="0.31"
        android:orientation="vertical"
        android:textDirection="anyRtl">

        <RelativeLayout
            android:id="@+id/RelativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="397dp"
            android:layout_weight="4.11"
            android:orientation="vertical"
            android:textDirection="anyRtl">


            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical">


                <com.nordicsemi.nrfUARTv2.circularbuttom.CircularProgressButton
                    android:id="@+id/btn_select"
                    android:layout_width="215dp"
                    android:layout_height="215dp"
                    android:textColor="@color/cpb_white"
                    android:textSize="40sp"
                    app:cpb_cornerRadius="148dp"
                    app:cpb_iconError="@drawable/ic_action_cancel"
                    app:cpb_textIdle="Punch"
                    app:cpb_textProgress="Processing"
                    ></com.nordicsemi.nrfUARTv2.circularbuttom.CircularProgressButton>

                <TextView
                    android:id="@+id/txtfullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/btn_select"
                    android:layout_alignStart="@+id/txtdatetime"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:gravity="center"
                    android:textColor="@color/cpb_blue_dark"
                    android:textDirection="anyRtl"
                    android:textSize="24sp" />


                <TextView
                    android:id="@+id/txtdate"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/cpb_blue_dark"
                    android:textDirection="anyRtl"
                    android:textSize="17sp" />


                <TextView
                    android:id="@+id/ErrorMessage"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textColor="@color/cpb_red"
                    android:textDirection="anyRtl"
                    android:textSize="23sp" />
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/RelativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="@android:dimen/app_icon_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:gravity="center_horizontal"
            android:text="@string/Status"
            android:textColor="@color/cpb_blue"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/txtregistered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/textView16"
            android:textColor="@color/color_4CAF50"
            android:textDirection="anyRtl"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/deviceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView16"
            android:text="@string/device"
            android:textColor="@color/cpb_blue"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/deviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/deviceLabel"
            android:layout_alignBottom="@+id/txtregistered"
            android:layout_alignStart="@id/txtregistered"
            android:autoMirrored="true"
            android:text="@string/no_device"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorHint"
            android:textColorHighlight="@color/colorAccent"
            android:textSize="18sp"
            tools:textSize="@dimen/activity_vertical_margin" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/sendButton"
        android:layout_alignParentTop="true"
        android:orientation="vertical">



    </RelativeLayout>











</LinearLayout>